{
  "options": {
    "doNotFollow": { "path": "node_modules" },
    "tsConfig": { "fileName": "tsconfig.json" },
    "enhancedResolveOptions": {
      "exportsFields": ["exports"],
      "conditionNames": ["import", "require", "node", "default"]
    }
  },
  "forbidden": [
    {
      "name": "core-must-not-depend-on-adapter-error-policy-registry",
      "severity": "error",
      "from": { "path": "^src/core/" },
      "to": { "path": "^src/adapter/_shared/error_policy_registry\\.ts$" }
    },
    {
      "name": "core-must-not-depend-on-adapter",
      "severity": "error",
      "from": { "path": "^src/core/" },
      "to": { "path": "^src/adapter/" }
    },
    {
      "name": "core-must-not-depend-on-sandbox",
      "severity": "error",
      "from": { "path": "^src/core/" },
      "to": { "path": "^src/sandbox/" }
    },
    {
      "name": "adapter-must-not-depend-on-sandbox",
      "severity": "error",
      "from": { "path": "^src/adapter/" },
      "to": { "path": "^src/sandbox/" }
    },
    {
      "name": "web-ui-must-not-import-core",
      "severity": "error",
      "from": { "path": "^src/adapters/web/ui/" },
      "to": { "path": "^src/core/" }
    },
    {
      "name": "web-ui-must-not-import-core-alias",
      "severity": "error",
      "from": { "path": "^src/adapters/web/ui/" },
      "to": {
        "path": "^@/core/",
        "couldNotResolve": true
      }
    },
    {
      "name": "no-circular-dependencies",
      "severity": "error",
      "from": {},
      "to": { "circular": true }
    }
  ]
}
